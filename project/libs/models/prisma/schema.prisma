enum GuitarType {
  electro
  acoustics
  ukukule
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             String     @id @default(uuid())
  name           String?
  description    String?
  createdAt      DateTime   @default(now()) @map("created_at")
  photo          String?
  type           GuitarType @default(electro)
  article        String?
  StringCount    Int?
  Price          Int?

  @@index([article])
  @@map("products")
}

model User {
  id        String   @id @default(uuid())
  login     String
  email     String
  password  String

  @@index([email, login])
  @@map("users")
}
